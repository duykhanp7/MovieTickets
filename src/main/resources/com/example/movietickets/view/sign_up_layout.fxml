<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="527.0" prefWidth="430.0" style="-fx-background-color: #4a2870;" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.movietickets.SignUpLayoutController">
   <children>
      <VBox alignment="TOP_CENTER" prefHeight="527.0" prefWidth="430.0">
         <children>
            <HBox alignment="CENTER" spacing="20.0">
               <VBox.margin>
                  <Insets top="20.0" />
               </VBox.margin>
               <children>
                  <ImageView fitHeight="65.0" fitWidth="80.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../image/staff_ic.png" />
                     </image>
                  </ImageView>
                  <Label text="STAFF" textFill="WHITE">
                     <font>
                        <Font name="Agency FB Bold" size="30.0" />
                     </font>
                  </Label>
               </children>
            </HBox>
            <HBox alignment="BOTTOM_CENTER" prefHeight="104.0" prefWidth="430.0" spacing="103.0">
               <children>
                  <Label prefHeight="36.0" prefWidth="60.0" text="Full name" textFill="WHITE">
                     <font>
                        <Font name="Agency FB" size="20.0" />
                     </font></Label>
                  <TextField fx:id="fullName" alignment="CENTER" prefHeight="35.0" prefWidth="186.0">
                     <font>
                        <Font name="Agency FB" size="18.0" />
                     </font></TextField>
               </children>
            </HBox>
            <HBox alignment="CENTER" prefHeight="66.0" prefWidth="430.0" spacing="130.0">
               <children>
                  <Label text="Email" textFill="WHITE">
                     <font>
                        <Font name="Agency FB" size="20.0" />
                     </font>
                  </Label>
                  <TextField fx:id="email" alignment="CENTER" prefHeight="35.0" prefWidth="184.0">
                     <font>
                        <Font name="Agency FB" size="18.0" />
                     </font></TextField>
               </children></HBox>
            <HBox alignment="CENTER" prefHeight="54.0" prefWidth="430.0" spacing="48.0">
               <children>
                  <Label prefHeight="24.0" prefWidth="115.0" text="Phone Number" textFill="WHITE">
                     <font>
                        <Font name="Agency FB" size="20.0" />
                     </font>
                  </Label>
                  <TextField fx:id="phoneNumber" alignment="CENTER" prefHeight="35.0" prefWidth="187.0">
                     <font>
                        <Font name="Agency FB" size="18.0" />
                     </font></TextField>
               </children></HBox>
            <HBox alignment="CENTER" prefHeight="51.0" prefWidth="430.0">
               <children>
                  <Label prefHeight="24.0" prefWidth="197.0" text="Password" textFill="WHITE">
                     <font>
                        <Font name="Agency FB" size="20.0" />
                     </font>
                     <padding>
                        <Insets left="33.0" />
                     </padding></Label>
                  <Pane prefHeight="69.0" prefWidth="187.0">
                     <HBox.margin>
                        <Insets />
                     </HBox.margin>
                     <children>
                        <TextField fx:id="passWordShow" alignment="CENTER" layoutX="1.0" layoutY="8.0" prefHeight="35.0" prefWidth="188.0">
                           <font>
                              <Font name="Agency FB" size="18.0" />
                           </font></TextField>
                        <PasswordField fx:id="passWordHide" alignment="CENTER" layoutX="1.0" layoutY="8.0" prefHeight="35.0" prefWidth="188.0">
                           <font>
                              <Font name="Agency FB" size="18.0" />
                           </font></PasswordField>
                     </children>
                  </Pane>
                  <ImageView fx:id="imageViewShowHidePass" fitHeight="27.0" fitWidth="33.0" onMouseClicked="#showPass" pickOnBounds="true" preserveRatio="true">
                     <HBox.margin>
                        <Insets left="10.0" />
                     </HBox.margin>
                     <image>
                        <Image url="@../image/hide_pass.png" />
                     </image>
                  </ImageView>
               </children>
               <padding>
                  <Insets top="5.0" />
               </padding></HBox>
            <HBox alignment="CENTER" prefHeight="67.0" prefWidth="430.0">
               <children>
                  <Label prefHeight="24.0" prefWidth="197.0" text="Password Confirm" textFill="WHITE">
                     <font>
                        <Font name="Agency FB" size="20.0" />
                     </font>
                     <padding>
                        <Insets left="32.0" />
                     </padding>
                  </Label>
                  <Pane prefHeight="34.0" prefWidth="187.0">
                     <children>
                        <TextField fx:id="confirmPasswordShow" alignment="CENTER" layoutX="1.0" layoutY="18.0" prefHeight="35.0" prefWidth="188.0">
                           <font>
                              <Font name="Agency FB" size="18.0" />
                           </font></TextField>
                        <PasswordField fx:id="confirmPasswordHide" alignment="CENTER" layoutX="1.0" layoutY="18.0" prefHeight="35.0" prefWidth="188.0">
                           <font>
                              <Font name="Agency FB" size="18.0" />
                           </font></PasswordField>
                     </children>
                  </Pane>
                  <ImageView fx:id="imageViewShowHidePassConfirm" fitHeight="35.0" fitWidth="29.0" onMouseClicked="#showPassConfirm" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../image/hide_pass.png" />
                     </image>
                     <HBox.margin>
                        <Insets left="10.0" />
                     </HBox.margin>
                  </ImageView>
               </children>
            </HBox>
            <HBox alignment="CENTER_RIGHT">
               <children>
                  <Label fx:id="textViewWrong" text="(*) Please fill in the blanks." textFill="#f07e00" visible="false">
                     <font>
                        <Font name="Agency FB" size="15.0" />
                     </font>
                     <padding>
                        <Insets right="30.0" />
                     </padding>
                  </Label>
               </children>
            </HBox>
            <HBox alignment="CENTER" prefHeight="97.0" prefWidth="430.0">
               <children>
                  <Button fx:id="buttonSignUp" alignment="BOTTOM_CENTER" mnemonicParsing="false" onMouseClicked="#onButtonSignUpClick" prefHeight="38.0" prefWidth="108.0" text="Sign Up">
                     <font>
                        <Font name="Agency FB" size="20.0" />
                     </font>
                  </Button>
               </children>
            </HBox>
         </children>
      </VBox>
   </children>
</AnchorPane>
